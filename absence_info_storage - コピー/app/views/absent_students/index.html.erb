<div class="container">
  <h1>欠席情報一覧</h1>
  <table>
    <tr>
      <th>名前</th>
      <th>１</th>
      <th>２</th>
      <th>３</th>
      <th>４</th>
      <th>５</th>
      <th>外</th>
      <th>理由</th>
    </tr>
    <% reason_name = ["","寝坊","熱","めまい","病気","怪我","公欠"] %>
    <% @absent_students.each do |absent_student| %>
    <tr>
      <td><%= absent_student.name %></td>
      <td><%= "×" if absent_student.first %></td>
      <td><%= "×" if absent_student.second %></td>
      <td><%= "×" if absent_student.third %></td>
      <td><%= "×" if absent_student.fourth %></td>
      <td><%= "×" if absent_student.fifth %></td>
      <td><%= "×" if absent_student.outside %></td>
      <td><%= reason_name[absent_student.reason] %></td>
    </tr>
    <% end %>
  </table>
</div>
